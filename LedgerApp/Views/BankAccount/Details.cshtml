@model BankAccount
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.AccountName Details and History | Current Balance: $@Model.Balance()</h2>
<section class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Transaction Number
                </th>
                <th>
                    Transaction Date
                </th>
                <th>
                    Transaction Amount
                </th>
                <th>
                    Transaction Memo
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Transaction t in Model.AccountTransactions)
            {
                <tr>
                    <td>
                        @t.TransId
                    </td>
                    <td>
                        @t.TranDate.ToShortDateString()
                    </td>
                    <td>
                        $@t.TranAmt
                    </td>
                    <td>
                        @t.TranMemo
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-sm-8 col-lg-6 col-md-6">
        <h3>
            <a asp-controller="Transaction" asp-action="Deposit">
                Deposit
            </a>
        </h3>
    </div>
    <div class="col-sm-8 col-lg-6 col-md-6">
        <h3>
            <a asp-controller="Transaction" asp-action="Withdraw">Withdraw</a></h3>
    </div>
</section>
