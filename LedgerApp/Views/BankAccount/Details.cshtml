@model BankAccount
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.AccountName Details and History</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Transaction Number
            </th>
            <th>
                Transaction Date
            </th>
            <th>
                Transaction Amount
            </th>
            <th>
                Transaction Memo
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Transaction t  in Model.AccountTransactions)
        {
            <tr>
                <td>
                    @t.TransId
                </td>
                <td>
                    @t.TranDate.ToShortDateString()
                </td>
                <td>
                   $@t.TranAmt
                </td>
                <td>
                    @t.TranMemo
                </td>
            </tr>
        }
    </tbody>
</table>

