@model IEnumerable<BankAccount>
@{
    ViewData["Title"] = "Index";
}

<section class="container">
    <h2>All Your Accounts</h2>
    @foreach (var account in Model)
    {
        <div class="col-sm-8 col-lg-6 col-md-6">
            <h3>
                <a asp-controller="Transactions" asp-action="allTransactions" asp-route-id="@account.AccountNum">
                    @account.AccountName
                </a>
            </h3>
            <p>Current Balance: $@account.Balance()</p>
        </div>
    }
</section>

<section class="container">
    <h3>
        <a asp-area="" asp-controller="BankAccount" asp-action="NewAccount">Create A New Account</a>
    </h3>
</section>

